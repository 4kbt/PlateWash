fn = system("echo $GNUPLOTME");
outfile = fn .".eps"

set term postscript enhanced solid color size 9,15
set output outfile

set palette
set key noauto

set xlabel 'A position ({/Symbol m}m)'
set ylabel 'B position ({/Symbol m}m)'
set cblabel 'torque difference (fN-m)'

pl fn u ( $1 * 1e6 ):( $2 * 1e6 ):( $3*1e15 ) pt 7 ps 0.5 palette
